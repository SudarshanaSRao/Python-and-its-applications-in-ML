// Program to find the distance using IR sensor.

#define IR A0 // IR connection to A0.
int reading, reading1; // Declaration of valriables.

void setup() 
{
  Serial.begin(9600);
}

void loop()
{
  reading = analogRead(IR); // Reading value.
  delay(2000); // Adds a delay between the two readings.
  reading1 = analogRead(IR); // Reading the second value.

  if(reading1 < reading || reading1 > reading) // Safe or not condition.
   {
    Serial.println("Dent detected"); // Printing warning.
    Serial.println(reading1); // Printing value.
   }
  else
  {
    Serial.println("No dents present"); // Printing safe if safe.
    Serial.println(reading); // Printing analog value.
  }

  delay(2000); // Adds delay while displaying the output.

}
